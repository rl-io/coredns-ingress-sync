{
  "packages": {
    ".": {
      "release-type": "simple",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "include-v-in-tag": true,
      "extra-files": [
        {
          "type": "yaml",
          "path": "helm/coredns-ingress-sync/Chart.yaml",
          "jsonpath": "$.version"
        },
        {
          "type": "yaml", 
          "path": "helm/coredns-ingress-sync/Chart.yaml",
          "jsonpath": "$.appVersion"
        },
        {
          "type": "yaml",
          "path": "helm/coredns-ingress-sync/values.yaml",
          "jsonpath": "$.image.tag"
        },
        {
          "type": "yaml",
          "path": "helm/coredns-ingress-sync/values-production.yaml", 
          "jsonpath": "$.image.tag"
        },
        {
          "type": "generic",
          "path": "README.md",
          "replacements": [
            {
              "search": "oci://ghcr.io/rl-io/charts/coredns-ingress-sync \\\\\\s*\\n\\s*--version [0-9]+\\.[0-9]+\\.[0-9]+",
              "replace": "oci://ghcr.io/rl-io/charts/coredns-ingress-sync \\\\\n  --version ${version}"
            },
            {
              "search": "--set image\\.tag=[a-zA-Z0-9\\.\\-]+",
              "replace": "--set image.tag=${version}"
            }
          ]
        },
        {
          "type": "generic",
          "path": "helm/coredns-ingress-sync/README.md",
          "replacements": [
            {
              "search": "oci://ghcr.io/rl-io/charts/coredns-ingress-sync \\\\\\s*\\n\\s*--version [0-9]+\\.[0-9]+\\.[0-9]+",
              "replace": "oci://ghcr.io/rl-io/charts/coredns-ingress-sync \\\\\n  --version ${version}"
            }
          ]
        }
      ]
    }
  }
}
